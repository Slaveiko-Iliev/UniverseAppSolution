@model List<MovieHomeViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<div id="moviesInfoCarousel" class="carousel slide">
    <div class="carousel-indicators">
        @{
            for (int i = 0; i < Model.Count; i++)
			{
                <button type="button" data-bs-target="#moviesInfoCarousel" data-bs-slide-to="@i" class="@(i == 0 ? "active" : "")" aria-current="true" aria-label="Episode @(i + 1)"></button>
			}
        }
    </div>
    <div class="carousel-inner">
        @{
            for (int i = 0; i < Model.Count; i++)
            {
                <div class="carousel-item @(i == 0 ? "active" : "")">
					<img src="@Model[i].ImageUrl" class="img-fluid rounded mx-auto d-block" alt="@Model[i].Title">
					<div class="carousel-caption d-none d-md-block">
						<h5>@Model[i].Title</h5>
						<p>@Model[i].Description</p>
					</div>
                </div>
            }
        }
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#moviesInfoCarousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#moviesInfoCarousel" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>