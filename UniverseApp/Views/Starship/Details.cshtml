@model StarshipDetailsViewModel

@{
    ViewBag.Title = "Starship Details";
}

<div class="card mb-3" style="max-width: 90%;">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="~/Images/starship.png" class="img-fluid rounded-start" alt="...">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h4 class="card-title">@Model.Name</h4>
                <p class="card-text"><span class="fw-bolder">Model:</span> @Model.StarshipModel</p>
                <p class="card-text"><span class="fw-bolder">Manufacturer:</span> @Model.Manufacturer</p>
                <p class="card-text"><span class="fw-bolder">Cost in credits:</span> @Model.CostInCredits</p>
                <p class="card-text"><span class="fw-bolder">Length:</span> @Model.Length</p>
                <p class="card-text"><span class="fw-bolder">Max atmosphering sSpeed:</span> @Model.MaxAtmospheringSpeed</p>
                <p class="card-text"><span class="fw-bolder">Crew:</span> @Model.Crew</p>
                <p class="card-text"><span class="fw-bolder">Passengers</span>: @Model.Passengers</p>
                <p class="card-text"><span class="fw-bolder">Cargo capacity:</span> @Model.CargoCapacity</p>
                <p class="card-text"><span class="fw-bolder">Consumables:</span> @Model.Consumables</p>
                <p class="card-text"><span class="fw-bolder">Class:</span> @Model.Class</p>
                <p class="card-text"><span class="fw-bolder">Hyperdrive rating:</span> @Model.HyperdriveRating</p>
                <p class="card-text"><span class="fw-bolder">MGLT:</span> @Model.MGLT</p>
                <div class="accordion" id="accordionExample">
                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                Characters
                            </button>
                        </h2>
                        <div id="collapseOne" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
                            <div class="accordion-body">
                                <partial name="_StarshipDetailsPartial" model="@Model.CharactersNames" />
                            </div>
                        </div>
                    </div>
                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                Movies
                            </button>
                        </h2>
                        <div id="collapseTwo" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
                            <div class="accordion-body">
                                <partial name="_StarshipDetailsPartial" model="@Model.MoviesNames" />
                        </div>
                    </div>
                </div>
            </div>
                <a asp-controller="Starship" asp-action="All" asp-route-id="@Model.Id"
               class="btn btn-primary">Back</a>
                <a asp-controller="Starship" asp-action="Edit" asp-route-id="@Model.Id"
               class="btn btn-primary">Edit</a>
                <a asp-controller="Starship" asp-action="Delete" asp-route-id="@Model.Id"
               class="btn btn-primary">Delete</a>
        </div>
    </div>
</div>