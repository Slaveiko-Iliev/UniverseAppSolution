@model SpecieAllViewModel

<div class="col d-flex justify-content-center p-3">
    <div class="card" style="">
        <img src="~/Images/specie.png" class="card-img-top" alt="...">
        <div class="card-body">
            <h5 class="card-title">@Model.Name</h5>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">Classification: @Model.Classification</li>
            <li class="list-group-item">Designation: @Model.Designation</li>
            <li class="list-group-item">Average height: @Model.AverageHeight</li>
            <li class="list-group-item">Skin color: @Model.SkinColor</li>
            <li class="list-group-item">Eye color: @Model.EyeColor</li>
            <li class="list-group-item">Average lifespan: @Model.AverageLifespan</li>
            <li class="list-group-item">Language: @Model.Language</li>
        </ul>
        <div class="card-body ">
            <p class="card-text">
                <a asp-controller="Specie" asp-action="Details" asp-route-id="@Model.Id"
                   class="btn btn-primary">Details</a>
                <a asp-controller="Specie" asp-action="Edit" asp-route-id="@Model.Id"
                   class="btn btn-primary">Edit</a>
                <a asp-controller="Specie" asp-action="Delete" asp-route-id="@Model.Id"
                   class="btn btn-primary">Delete</a>
            </p>
        </div>
    </div>
</div>