@model CharacterFormModel

<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <form method="post">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" placeholder="Name...">
                <span asp-validation-for="Name" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Height"></label>
                <input asp-for="Height" class="form-control" placeholder="Height...">
                <span asp-validation-for="Height" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Mass"></label>
                <input asp-for="Mass" rows="4" class="form-control" placeholder="Mass..."></input>
                <span asp-validation-for="Mass" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HairColor"></label>
                <input asp-for="HairColor" class="form-control" placeholder="Hair color...">
                <span asp-validation-for="HairColor" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SkinColor"></label>
                <input asp-for="SkinColor" class="form-control" placeholder="Skin color...">
                <span asp-validation-for="SkinColor" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EyeColor"></label>
                <input asp-for="EyeColor" class="form-control" placeholder="Eye color...">
                <span asp-validation-for="EyeColor" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="BirthYear"></label>
                <input asp-for="BirthYear" class="form-control" placeholder="Birth year...">
                <span asp-validation-for="BirthYear" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender"></label>
                <input asp-for="Gender" class="form-control" placeholder="Gender...">
                <span asp-validation-for="Gender" class="small text-danger"></span>
            </div>

            <div class="text-center">
                <a asp-controller="Character" asp-action="All" class="btn btn-primary mt-3">Cancel</a>
                <input class="btn btn-primary mt-3" type="submit" value="Save" />
            </div>
        </form>
    </div>
</div>