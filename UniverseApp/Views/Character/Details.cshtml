@model CharacterDetailsViewModel

@{
    ViewBag.Title = "Character Details";
}

<div class="card mb-3" style="max-width: 90%;">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="~/Images/character.png" class="img-fluid rounded-start" alt="...">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h4 class="card-title">@Model.Name</h4>
                <p class="card-text"><span class="fw-bolder">Height:</span> @Model.Height</p>
                <p class="card-text"><span class="fw-bolder">Mass:</span> @Model.Mass</p>
                <p class="card-text"><span class="fw-bolder">Hair color:</span> @Model.HairColor</p>
                <p class="card-text"><span class="fw-bolder">Skin color:</span> @Model.SkinColor</p>
                <p class="card-text"><span class="fw-bolder">Eye color:</span> @Model.EyeColor</p>
                <p class="card-text"><span class="fw-bolder">Birth year:</span> @Model.BirthYear</p>
                <p class="card-text"><span class="fw-bolder">Gender</span>: @Model.Gender</p>
                <div class="accordion" id="accordionExample">
                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                Movies
                            </button>
                        </h2>
                        <div id="collapseOne" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
                            <div class="accordion-body">
                                <partial name="_CharacterDetailsPartial" model="@Model.MoviesNames" />
                            </div>
                        </div>
                    </div>
                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                Species
                            </button>
                        </h2>
                        <div id="collapseTwo" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
                            <div class="accordion-body">
                                <partial name="_CharacterDetailsPartial" model="@Model.SpeciesNames" />
                        </div>
                    </div>
                    <div class="accordion-item">
                        <h2 class="accordion-header">
                                <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                                    Vehicles
                            </button>
                        </h2>
                            <div id="collapseThree" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
                            <div class="accordion-body">
                                    <partial name="_CharacterDetailsPartial" model="@Model.VehiclesNames" />
                        </div>
                    </div>
                    <div class="accordion-item">
                        <h2 class="accordion-header">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseFour" aria-expanded="false" aria-controls="collapseFour">
                                        Starships
                            </button>
                        </h2>
                                <div id="collapseFour" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
                            <div class="accordion-body">
                                        <partial name="_CharacterDetailsPartial" model="@Model.StarshipsNames" />
                        </div>
                    </div>
                </div>
            </div>
                        <a asp-controller="Character" asp-action="All" asp-route-id="@Model.Id"
               class="btn btn-primary">Back</a>
                        <a asp-controller="Character" asp-action="Edit" asp-route-id="@Model.Id"
               class="btn btn-primary">Edit</a>
                        <a asp-controller="Character" asp-action="Delete" asp-route-id="@Model.Id"
               class="btn btn-primary">Delete</a>
        </div>
    </div>
</div>