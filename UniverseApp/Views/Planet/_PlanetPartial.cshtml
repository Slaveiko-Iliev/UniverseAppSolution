@model PlanetAllViewModel

<div class="col d-flex justify-content-center p-3">
    <div class="card" style="width: 25rem;">
        <img src="~/Images/planet.png" class="card-img-top" alt="...">
        @* <img src="@Model.ImageUrl" class="card-img-top" alt="..."> *@
        <div class="card-body">
            <h5 class="card-title">@Model.Name</h5>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">Rotation period: @Model.RotationPeriod</li>
            <li class="list-group-item">Orbital period: @Model.OrbitalPeriod</li>
            <li class="list-group-item">Climate: @Model.Climate</li>
            <li class="list-group-item">Gravity: @Model.Gravity</li>
            <li class="list-group-item">Terrain: @Model.Terrain</li>
            <li class="list-group-item">Surface уater: @Model.SurfaceWater</li>
            <li class="list-group-item">Population: @Model.Population</li>
        </ul>
        <div class="card-body d-">
            <p class="card-text">
                <a asp-controller="Planet" asp-action="All" asp-route-id="@Model.Id"
                   class="btn btn-primary">All</a>
                <a asp-controller="Planet" asp-action="Details" asp-route-id="@Model.Id"
                   class="btn btn-primary">Details</a>
                <a asp-controller="Planet" asp-action="Edit" asp-route-id="@Model.Id"
                   class="btn btn-primary">Edit</a>
                <a asp-controller="Planet" asp-action="Delete" asp-route-id="@Model.Id"
                   class="btn btn-primary">Delete</a>
            </p>
        </div>
    </div>
</div>