@model MovieAllQueryModel

@{
    ViewBag.Title = "All Movies";
}

<form method="get">
    <div class="row">
        <div class="form-group col-md-3">
            <label asp-for="SearchCharacter"></label>
            <input asp-for="SearchCharacter" class="form-control" placeholder="...">
        </div>
        <div class="form-group col-md-3">
            <label asp-for="SearchPlanet"></label>
            <input asp-for="SearchPlanet" class="form-control" placeholder="...">
        </div>
        <div class="form-group col-md-3">
            <label asp-for="SearchSpecie"></label>
            <input asp-for="SearchSpecie" class="form-control" placeholder="...">
        </div>
        <div class="form-group col-md-3">
            <label asp-for="SearchVehicle"></label>
            <input asp-for="SearchVehicle" class="form-control" placeholder="...">
        </div>
        <div class="form-group col-md-3">
            <label asp-for="SearchStarship"></label>
            <input asp-for="SearchStarship" class="form-control" placeholder="...">
        </div>
        <div class="col-md-3">
            <div class="form-group mt-4">
                <input type="submit" value="Search" class="btn btn-primary" />
            </div>
        </div>
    </div>
</form>


@{
    var previousPage = Model.CurrentPage - 1;
    if (previousPage < 1)
    {
        previousPage = 1;
    }

    var maxPage = Math.Ceiling((double)Model.TotalMoviesCount /
        MovieAllQueryModel.MoviesPerPage);
}
<div class="row mb-5">
    <div class="col-md-6 d-grid gap-2 d-md-flex justify-content-md-start">
        <a class="btn btn-primary @(Model.CurrentPage == 1 ? "disabled" : string.Empty)"
           asp-controller="House"
           asp-action="All"
           asp-route-currentPage="@previousPage"
           asp-route-searchCharacter="@Model.SearchCharacter"
           asp-route-searchPlanet="@Model.SearchPlanet"
           asp-route-searchSpecie="@Model.SearchSpecie"
           asp-route-searchVehicle="@Model.SearchVehicle"
           asp-route-searchStarship="@Model.SearchStarship"><<</a>
    </div>

    @{
        var shouldButtonBeDisabled = Model.CurrentPage == maxPage ||
        !Model.Movies.Any();
    }

    <div class="col-md-6 d-grid gap-2 d-md-flex justify-content-md-end">
        <a class="btn btn-primary
           @(shouldButtonBeDisabled ? "disabled" : string.Empty)"
           asp-controller="House"
           asp-action="All"
           asp-route-currentPage="@(Model.CurrentPage + 1)"
           asp-route-searchCharacter="@Model.SearchCharacter"
           asp-route-searchPlanet="@Model.SearchPlanet"
           asp-route-searchSpecie="@Model.SearchSpecie"
           asp-route-searchVehicle="@Model.SearchVehicle"
           asp-route-searchStarship="@Model.SearchStarship">>></a>
    </div>
</div>

@if (!Model.Movies.Any())
{
    <h2 class="text-center">No movies found by the given criteria!</h2>
}

<div class="container-fluid text-center">
    <div class="row">
        @foreach (var movie in Model.Movies)
        {
            <partial name="_MoviePartial" model="@movie" />
        }
    </div>
</div>