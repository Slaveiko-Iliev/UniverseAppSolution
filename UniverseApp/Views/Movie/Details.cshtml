@model MovieDetailsViewModel

@{
	ViewBag.Title = "Details";
}

<div class="card mb-3" style="max-width: 90%;">
    <div class="row g-0">
        <div class="col-md-4">
            <img src="@Model.ImageUrl" class="img-fluid rounded-start" alt="...">
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h4 class="card-title">@Model.Name</h4>
                <p class="card-text">@Model.Description</p>
                <p class="card-text"><span class="fw-bolder">Director:</span> @Model.Director</p>
                <p class="card-text"><span class="fw-bolder">Producer:</span> @Model.Producer</p>
                <p class="card-text"><span class="fw-bolder">Release date:</span> @Model.ReleaseDate</p>
                <div class="accordion" id="accordionExample">
                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                Planets
                            </button>
                        </h2>
                        <div id="collapseOne" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
                            <div class="accordion-body">
                                <partial name="_MovieDetailsPartial" model="@Model.PlanetsNames"  />
                            </div>
                        </div>
                    </div>
                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                Characters
                            </button>
                        </h2>
                        <div id="collapseTwo" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
                            <div class="accordion-body">
                                <partial name="_MovieDetailsPartial" model="@Model.CharactersNames" />
                            </div>
                        </div>
                    </div>
                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                                Species
                            </button>
                        </h2>
                        <div id="collapseThree" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
                            <div class="accordion-body">
                                <partial name="_MovieDetailsPartial" model="@Model.SpeciesNames" />
                            </div>
                        </div>
                    </div>
                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseFour" aria-expanded="false" aria-controls="collapseFour">
                                Vehicles
                            </button>
                        </h2>
                        <div id="collapseFour" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
                            <div class="accordion-body">
                                <partial name="_MovieDetailsPartial" model="@Model.VehiclesNames" />
                            </div>
                        </div>
                    </div>
                    <div class="accordion-item">
                        <h2 class="accordion-header">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseFive" aria-expanded="false" aria-controls="collapseFive">
                                Starships
                            </button>
                        </h2>
                        <div id="collapseFive" class="accordion-collapse collapse" data-bs-parent="#accordionExample">
                            <div class="accordion-body">
                                <partial name="_MovieDetailsPartial" model="@Model.StarshipsNames" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <a asp-controller="Movie" asp-action="All" asp-route-id="@Model.Id"
               class="btn btn-primary">Back</a>
            <a asp-controller="Movie" asp-action="Edit" asp-route-id="@Model.Id"
               class="btn btn-primary">Edit</a>
            <a asp-controller="Movie" asp-action="Delete" asp-route-id="@Model.Id"
               class="btn btn-primary">Delete</a>
        </div>
    </div>
</div>