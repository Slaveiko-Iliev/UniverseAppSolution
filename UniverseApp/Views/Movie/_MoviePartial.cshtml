@model MovieAllViewModel

<div class="col d-flex justify-content-center p-3">
    <div class="card" style="width: 25rem;">
        <img src="@Model.ImageUrl" class="card-img-top" alt="...">
        <div class="card-body">
            <h5 class="card-title">@Model.Title</h5>
            <p class="card-text text-truncate">@Model.Description</p>
        </div>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">Episode: @Model.EpisodeId</li>
            <li class="list-group-item">Director: @Model.Director</li>
            <li class="list-group-item">Release date: @Model.ReleaseDate</li>
        </ul>
        <div class="card-body d-">
            <p class="card-text">
                <a asp-controller="Movie" asp-action="Details" asp-route-id="@Model.Id"
                   class="btn btn-primary">Details</a>
                <a asp-controller="Movie" asp-action="Edit" asp-route-id="@Model.Id"
                   class="btn btn-primary">Edit</a>
                <a asp-controller="Movie" asp-action="Delete" asp-route-id="@Model.Id"
                   class="btn btn-primary">Delete</a>
            </p>
            <p class="card-text">
                <a class="btn btn-primary" href="@Model.Url" target="_blank">swapi.dev</a>
            </p>
        </div>
    </div>
</div>